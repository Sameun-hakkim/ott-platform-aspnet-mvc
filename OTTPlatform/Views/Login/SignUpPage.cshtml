@model OTTPlatform.Models.Login
@{
    Layout = null;
}
<h1>OTT Platform</h1>

<h4></h4>
<hr />

<title>Signup</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #121212;
        color: #ffffff;
    }

    #SignupSection {
        margin: auto;
        max-width: 500px;
        padding: 20px;
        background-color: #1e1e1e;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
    }

    .form-group label {
        color: #bbbbbb;
    }

    .form-control {
  /*       background-color: #2c2c2c;
        color: #ffffff;
        border: 1px solid #444; */
        background: #292929;
        border: none;
        color: #f5f5f5;
        border-radius: 5px;
        padding: 10px;
    }

        .form-control:focus {
            border-color: #666;
            background-color: #333;
            box-shadow: none;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #0056b3;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #003f7f;
        }

    hr {
        border-top: 1px solid #444;
    }

    h1 {
        text-align: center;
        color: #ffffff;
    }
</style>


<div class="row" id="SignupSection">
    <div class="col-md-12">
        <div id="LoginPannel">
            <div class="form-group">
                <label for="UserName">User Name</label>
                <input type="text" id="UserName" name="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <input type="password" id="Password" name="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label for="ConfirmPassword">Confirm Password</label>
                <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <button type="button" id="submitSignUp" class="btn btn-primary">Sign Up</button>
            </div>
        </div>
    </div>
</div>

@* @section Scripts { *@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {

            $("#ConfirmPassword").keypress(function (event) {
                if (event.which === 13) {
                    event.preventDefault();
                    $("#submitSignUp").click();
                }
            });
            $('#submitSignUp').click(function () {
                
                var UserName = $('#UserName').val();
                var Password = $('#Password').val();
                var ConfirmPassword = $('#ConfirmPassword').val();

                
                if (Password !== ConfirmPassword) {
                    alert('Password and Confirm Password do not match!');
                    return;
                }

               
                $.ajax({
                    url: '/Login/SignupInsert',
                    type: 'POST',
                    data: { userName: UserName, password: Password },
                    success: function (response) {
                       
                        if (response.success) {
                            alert('Sign up successfully!');
                            redirectFunction(response);

                        }
                        else {

                            alert(response.message);

                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Failed to sign up. Please try again.');
                        console.error(error);
                    }
                });
            });
        });

        function redirectFunction(response) {
            if (response.success && response.data) {
                window.location.href = '/Login/LoginPage';
            }
        }
    </script>
