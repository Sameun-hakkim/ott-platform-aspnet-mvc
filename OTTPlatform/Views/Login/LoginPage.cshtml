@* @section Scripts { *@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {

            $("#Password").keypress(function (event) {
                if (event.which === 13) { 
                    event.preventDefault();
                    $("#submitVideo").click();
                }
            });
            
            history.pushState(null, null, location.href);

            
            window.addEventListener("popstate", function (event) {
                console.log("Back button or popstate event triggered.");
                
                history.pushState(null, null, location.href);
            });
      

     
            $('#signupBtn').click(function () {
                window.location.href = '/Login/SignUpPage';

            });
            $('#togglePassword').click(function () {
                var passwordField = $('#Password');
                var passwordIcon = $('#passwordIcon');
                var type = passwordField.attr('type') === 'password' ? 'text' : 'password';

                passwordField.attr('type', type); 
                // passwordIcon.toggleClass('bi-eye bi-eye-slash');
                passwordIcon.text(type === 'password' ? 'Show' : 'Hide'); 
            });

            $('#submitVideo').click(function () {

                
                var UserName= $('#UserName').val();
                var Password= $('#Password').val();
               

                $.ajax({
                    url: '/Login/LoginValidation',
                    type: 'POST',
                    data: { userName: UserName, password: Password },
                    success: function (response) {

                    if (response.success) {
                         alert('Logged in successfully!');
                            redirectFunction(response);

                        }
                        else{

                        alert('Wrong Username or Password');

                        }

                  
                    },
                    error: function (xhr, status, error) {
                        alert('Failed to Login. Please try again.');
                        console.error(error);
                    }
                });
            });
           
        });
        
        window.onunload = function () {
            null;
        };

        function redirectFunction(response) {
            if (response.success && response.data) {
                if (response.data.userType === "Admin") {
                    window.location.href = '/Video/AdminPannel';
                } else {
                    
                    window.location.href = `/Video/UserPannel?logInID=${response.data.id}`;
                }
            } else {
                alert('Login failed: ' + response.message);
            }

        };
    </script>
