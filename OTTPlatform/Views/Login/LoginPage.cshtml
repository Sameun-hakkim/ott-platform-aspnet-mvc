<title>Login</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>

    /* Dark Theme Styles */
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: 'Poppins', sans-serif;
    }

    h1 {
        color: #f8f9fa;
        text-align: center;
        font-weight: 600;
        margin-bottom: 30px;
    }

    #LoginSection {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50vh;
    }

    #LoginPannel {
        background: #1e1e1e;
        padding: 30px 40px;
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.8);
        width: 100%;
        max-width: 400px;
    }

    .form-group label {
        color: #bdbdbd;
        font-size: 14px;
        margin-bottom: 8px;
    }

    .form-control {
        background: #292929;
        border: none;
        color: #f5f5f5;
        border-radius: 5px;
        padding: 10px;
    }

        .form-control:focus {
            border: 1px solid #6c757d;
            box-shadow: none;
        }

    .btn-primary {
        background: #007bff;
        border: none;
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background: #0056b3;
        }

    #signupBtn {
        display: block;
        margin: 0 auto 20px;
        background: transparent;
        border: 2px solid #007bff;
        color: #007bff;
        padding: 8px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        #signupBtn:hover {
            background: #007bff;
            color: #ffffff;
        }
</style>

<div class="container">

    <div class="row" id="LoginSection">
        <div id="LoginPannel">
            <h1>Login</h1>
            <div class="form-group">
                <label for="UserName">Username</label>
                <input type="text" id="UserName" name="UserName" class="form-control" placeholder="Enter your username">
            </div>
            <div class="form-group mt-3">
                <label for="Password">Password</label>
                <div class="input-group">
                    <input type="password" id="Password" name="Password" class="form-control" placeholder="Enter your password">
                    <button type="button" id="togglePassword" class="btn btn-outline-secondary">
                       <span id="passwordIcon">Show</span>
                     </button>
                </div>
                @*<input type="password" id="Password" name="Password" class="form-control" placeholder="Enter your password"> *@            </div>
            <div class="form-group mt-4">
                <button type="button" id="submitVideo" class="btn btn-primary">Login</button>
            </div>
            <div class="form-group mt-3">
                <button type="button" id="signupBtn" class="btn btn-primary">Sign-up</button>
            </div>
        </div>
    </div>
</div>

